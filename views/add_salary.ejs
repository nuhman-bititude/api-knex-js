    <form action="/salary/create" method="post" class="form">
      <label for="First" class="form-label">Employee Name</label>

      <select name="name" class="form-select">


        <% for (let i=0; i < employees.length; i++) { %>
          <option value="<%= employees[i].name %> ">
            <%= employees[i].name %>

          </option>

          <% } %>

      </select>

      <label for="First" class="form-label">Basic : </label>
      <input type="number" name="basic" class="form-control" placeholder="Enter Basic" required />

      <label for="email" class="form-label">Incentive : </label>
      <input type="number" name="incentive" class="form-control" placeholder="Enter Incentive" required />



      <button type="submit" class="mt-3 btn-danger">submit</button>
    </form>
  </div>
